# Polymarket Bot Configuration
# Copy this file to .env and fill in your values

# ===========================================
# WALLET CONFIGURATION
# ===========================================
# Your wallet's private key (from MetaMask/Phantom)
# NEVER share this with anyone!
PRIVATE_KEY=0x...your_private_key_here...

# Your wallet address (the one that holds USDC)
WALLET_ADDRESS=0x...your_wallet_address_here...

# ===========================================
# POLYMARKET API CREDENTIALS
# ===========================================
# Get these from: Polymarket -> Settings -> API -> Create Key
CLOB_API_KEY=your_api_key_here
CLOB_SECRET=your_secret_here
CLOB_PASSPHRASE=your_passphrase_here

# ===========================================
# NETWORK CONFIGURATION
# ===========================================
# Polygon Mainnet (don't change unless testing)
POLYGON_CHAIN_ID=137

# RPC Endpoints (get from Infura/Alchemy for better reliability)
POLYGON_RPC_URL=https://polygon-rpc.com

# ===========================================
# TRADING PARAMETERS
# ===========================================
# Position size as percentage of portfolio (0.005 = 0.5%, 0.01 = 1%)
POSITION_SIZE_PCT=0.005

# Maximum single position (percentage of portfolio)
MAX_POSITION_PCT=0.05

# Daily loss limit (percentage of portfolio) - bot stops if exceeded
DAILY_LOSS_LIMIT_PCT=0.05

# Minimum price to buy (0.99 = only buy if price < $0.99)
MIN_PRICE_THRESHOLD=0.99

# Maximum price to pay for "guaranteed" wins
MAX_BUY_PRICE=0.99

# ===========================================
# SAFETY SETTINGS
# ===========================================
# Set to True to test without executing trades
DRY_RUN=True

# Telegram notifications (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord webhook (optional)
DISCORD_WEBHOOK_URL=
